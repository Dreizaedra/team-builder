{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="bg-gris p-4">

                    {{ form_start(addTeamForm) }}
                        <div class="row">
                            <div class="col-4">
                                {{ form_widget(addTeamForm.name, {attr: {class: "form-control"}}) }}
                            </div>
                            <div class="col-1">
                                <button class="btn btn-success" type="submit">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    {{ form_end(addTeamForm) }}

                </div>
                <div class="equipe">
                    {% for team in teams %}
                        {{ component('Team', {name: team.name, players: team.players}) }}
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-4">
                <div class="bg-gris p-4">
                    {{ form_start(addPlayerForm) }}
                        <div class="mb-3">
                            {{ form_widget(addPlayerForm.firstName, {attr: {class: "form-control"}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_widget(addPlayerForm.lastName, {attr: {class: "form-control"}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_widget(addPlayerForm.teams) }}
                        </div>
                        <button class="btn btn-success btn-lg col-12">
                            <i class="fa fa-plus"></i>
                        </button>
                    {{ form_end(addPlayerForm) }}
                </div>

                <div class="mt-3 pt-2">
                    {{ component('Team', {players: playersWithNoTeam}) }}
                </div>
            </div>
            <!-- col4 -->
        </div>
        <!-- row -->
    </div>
{% endblock %}
